---
// Sección de diferencias

import Diferencia1 from "../../../images/index/diferencia1.webp";
import Diferencia2 from "../../../images/index/diferencia2.webp";
import Diferencia3 from "../../../images/index/diferencia3.webp";
import fondoDiferencias from "../../../images/index/fondo-diferencias.webp";

const diferencias = [
	{
		titulo: "Diferencia 1",
		descripcion:
			"Lorem ipsum dolor sit amet consectetur. Purus sagittis tellus nisl id. Lorem placerat ut fringilla condimentum rhoncus. Pretium varius ultrices risus commodo. Quis aenean diam at proin. Neque erat sit leo egestas ut parturient quisque diam. Facilisi non diam est commodo. Consequat venenatis convallis vitae lectus amet quis non a. Aliquam pellentesque nunc.",
		imagen: Diferencia1.src,
	},
	{
		titulo: "Diferencia 2",
		descripcion:
			"Lorem ipsum dolor sit amet consectetur. Purus sagittis tellus nisl id. Lorem placerat ut fringilla condimentum rhoncus. Pretium varius ultrices risus commodo. Quis aenean diam at proin. Neque erat sit leo egestas ut parturient quisque diam. Facilisi non diam est commodo. Consequat venenatis convallis vitae lectus amet quis non a. Aliquam pellentesque nunc.",
		imagen: Diferencia2.src,
	},
	{
		titulo: "Diferencia 3",
		descripcion:
			"Lorem ipsum dolor sit amet consectetur. Purus sagittis tellus nisl id. Lorem placerat ut fringilla condimentum rhoncus. Pretium varius ultrices risus commodo. Quis aenean diam at proin. Neque erat sit leo egestas ut parturient quisque diam. Facilisi non diam est commodo. Consequat venenatis convallis vitae lectus amet quis non a. Aliquam pellentesque nunc.",
		imagen: Diferencia3.src,
	},
];
---

<section class="relative w-full bg-cover bg-center py-6 my-10" style={{backgroundImage:`url(${fondoDiferencias.src})`}}>
	<div class="px-4 lg:px-24">
		{/* Título de sección */}
		<h2 class="inline-block text-4xl text-[#4FAFB1] text-left font-semibold mb-6 
					after:block after:w-auto after:bg-[#4FAFB1] after:h-1 after:mt-1 after:rounded-2xl">
			¿Por qué elegir María Auxiliadora?
		</h2>	
		<div class="flex flex-col gap-8 lg:gap-16">
			{
				diferencias.map((item, index) => (
					<div class={`flex flex-col ${index % 2 === 0 ? "lg:flex-row" : "lg:flex-row-reverse"}`}>
						{/* Imagen */}
						<div class="z-10 lg:w-1/2">
							<img
								src={item.imagen}
								alt={item.titulo}
								class="w-full h-64 md:h-80 object-cover rounded-t-3xl lg:rounded-3xl lg:shadow-3xl"
							/>
						</div>				
						{/* Contenido de la tarjeta */}
						<div 
							class={`flex flex-col lg:w-1/2 bg-white shadow-lg rounded-b-3xl lg:rounded-3xl 
							px-5 py-6 lg:pt-6 lg:pb-9 lg:mt-12 ${
								index % 2 === 0 
									? "lg:pl-16 lg:pr-8 lg:-ml-8" 
									: "lg:pl-8 lg:pr-16 lg:-mr-8"
							}`}
						>
							<h3 class="text-2xl font-bold text-[#297378] mb-4">
								{item.titulo}
							</h3>
							<p class="text-gray-700 mb-6">{item.descripcion}</p>
							<a 
								href="#"
								class="flex self-start px-6 py-3 rounded-lg bg-[#4FAFB1] hover:bg-[#297378] hover:scale-105 duration-300 ease-linear">
								<span class="text-white text-center text-sm font-semibold">Leer más</span>
							</a>
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>